<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/rv_title"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:text="Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rv_desc"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Description"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/rv_title"
        app:layout_constraintTop_toBottomOf="@id/rv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/rv_date"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="20.12.2021"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/rv_title"
        app:layout_constraintTop_toBottomOf="@id/rv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:layout_marginTop="12dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/rv_date"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>